@model Category

<form asp-action="create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3 row">
        <label for="name" class="col-sm-2 col-form-label">Назва</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="Name" required maxlength="100">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
    </div>

    <input type="submit" class="btn btn-success" value="Створити" />
    <a class="btn btn-dark" asp-action="Index">Назад</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
