@model Product

<form asp-action="Create" method="post" enctype="multipart/form-data">


    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="Name">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">Description</label>
        <div class="col-sm-10">
            <textarea class="form-control" asp-for="Description"></textarea>
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">Price</label>
        <div class="col-sm-10">
            <input type="number" step="0.01" class="form-control" asp-for="Price">
            <span class="text-danger" asp-validation-for="Price"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">Amount</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" asp-for="Amount">
            <span class="text-danger" asp-validation-for="Amount"></span>
        </div>
    </div>

    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">Image</label>
        <div class="col-sm-10">
            <input type="file" class="form-control" name="ImageFile" accept="image/*">
        </div>
    </div>

    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">Category</label>
        <div class="col-sm-10">
            <select class="form-control" asp-for="CategoryId" asp-items="ViewBag.Categories">
                <option value="">Select a Category</option>
            </select>
            <span class="text-danger" asp-validation-for="CategoryId"></span>
        </div>
    </div>

    <input type="submit" class="btn btn-success" value="Create">
    <a class="btn btn-dark" asp-action="Index">Back</a>
</form>
